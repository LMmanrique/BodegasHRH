<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <mime-mapping>
        <extension>jsp</extension>
        <mime-type>text/html;charset=UTF-8</mime-type>
    </mime-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controlador.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Controlador.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizarInsumos</servlet-name>
        <servlet-class>Controlador.ActualizarInsumos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarInsumosServlet</servlet-name>
        <servlet-class>Controlador.ListarInsumosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarInsumosModalServlet</servlet-name>
        <servlet-class>Controlador.ListarInsumosModalServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExistenciaServlet</servlet-name>
        <servlet-class>Controlador.ExistenciaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IngresosServlet</servlet-name>
        <servlet-class>Controlador.IngresosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuevoMovimientoDAO</servlet-name>
        <servlet-class>Controlador.NuevoMovimientoDAO</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuevoMovimientoServlet</servlet-name>
        <servlet-class>Controlador.NuevoMovimientoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VencimientosServlet</servlet-name>
        <servlet-class>Controlador.VencimientosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EgresosServlet</servlet-name>
        <servlet-class>Controlador.EgresosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarInsumos</servlet-name>
        <url-pattern>/ActualizarInsumos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarInsumosServlet</servlet-name>
        <url-pattern>/ListarInsumosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarInsumosModalServlet</servlet-name>
        <url-pattern>/ListarInsumosModalServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExistenciaServlet</servlet-name>
        <url-pattern>/ExistenciaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IngresosServlet</servlet-name>
        <url-pattern>/IngresosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuevoMovimientoDAO</servlet-name>
        <url-pattern>/NuevoMovimientoDAO</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuevoMovimientoServlet</servlet-name>
        <url-pattern>/NuevoMovimientoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VencimientosServlet</servlet-name>
        <url-pattern>/VencimientosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EgresosServlet</servlet-name>
        <url-pattern>/EgresosServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>authentication-login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
